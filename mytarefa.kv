<Gerenciador>:
    Menu:
        name: "menu"
    Tarefas:   
        name: "tarefas"

<Menu>:
    BoxLayout:
        orientation:"vertical"
        padding: 150 # margem 
        spacing: 10  # espaço entre os botões
        Image:
            source:'img/logo/logo.png'
            size_hint_y: None
            height: 200
            # size_hint_x = None
        Button:
            text: "Tarefas"
            on_release: app.root.current = "tarefas"
        Button:
            text: " Assistente"
        Button:
            text: "Duvidas"
        Button:
            text: "Sair"
            on_release: app.stop()
<Tarefas>:
    BoxLayout:
        orientation:"vertical"
        ActionBar:
            ActionView:
                ActionPrevious:
                    title: "   Tarefas"
                    on_release: app.root.current = "menu"
                ActionButton:
                    text: "Menu"
                ActionSeparator:

                ActionButton:
                    text: "Sair"
                    on_release: app.stop()


        ScrollView:
            BoxLayout:
                id:box
                orientation:"vertical"
                size_hint_y:None
                height:self.minimum_height
        BoxLayout:
            size_hint_y: None
            height: 60 #definir altura
            TextInput:
                id:texto
            Button:
                text: "+"
                size_hint_x: None
                width: 60
                
                on_release: root.addWidget()


<Tarefa>:
    # definir tamanho padrao
    size_hint_y: None # anular a divisão na vertical
    height: 200 # especificar a altura em pixel
    Label:
        id:label #
        font_size:30 # definindo o tamanho da fonte 
    Button:
        text: "Remove" #texto no botão
        size_hint_x: None # desligar a divisão na horizontal
        width: 60  # especificar a largura do botal em pixel

        #as duas linhas abaixo repsentam a mesma coisa
        # on_release: app.root.ids.box.remove_widget(self.parent) 
        on_release: app.root.get_screen("tarefas").ids.box.remove_widget(root)

        