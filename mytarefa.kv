<Gerenciador>:
    Screen:
        Button:
            text: "Visualizar Tarefas"
            on_release: root.current = 'tarefas'

    Tarefas:   
        name: "tarefas"
<Tarefas>:
    BoxLayout:
        orientation:"vertical"
        ScrollView:
            BoxLayout:
                id:box
                orientation:"vertical"
                size_hint_y:None
                height:self.minimum_height
        BoxLayout:
            size_hint_y: None
            height: 60 #definir altura
            TextInput:
                id:texto
            Button:
                text: "+"
                size_hint_x: None
                width: 60
                
                on_release: root.addWidget()


<Tarefa>:
    # definir tamanho padrao
    size_hint_y: None # anular a divisão na vertical
    height: 200 # especificar a altura em pixel
    Label:
        id:label #
        font_size:30 # definindo o tamanho da fonte 
    Button:
        text: "Remove" #texto no botão
        size_hint_x: None # desligar a divisão na horizontal
        width: 60  # especificar a largura do botal em pixel

        #as duas linhas abaixo repsentam a mesma coisa
        # on_release: app.root.ids.box.remove_widget(self.parent) 
        on_release: app.root.get_screen("tarefas").ids.box.remove_widget(root)

        